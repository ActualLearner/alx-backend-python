pipeline {
    agent any

    environment {
        GIT_CREDENTIALS = 'your-credentials-id' // Jenkins stored credentials ID
        GIT_BRANCH = 'main'                      // Git branch to checkout
    }

    stages {
        stage('Checkout') {
            steps {
                // Pull code from GitHub with credentials and branch
                git branch: "${GIT_BRANCH}",
                    credentialsId: "${GIT_CREDENTIALS}",
                    url: 'https://github.com/your-username/messaging_app.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                // Install dependencies using pip3 from messaging_app/requirements.txt
                sh 'python3 -m venv venv'                                  // optional virtual environment
                sh '. venv/bin/activate && pip3 install --upgrade pip'
                sh '. venv/bin/activate && pip3 install -r messaging_app/requirements.txt'
            }
        }

        stage('Run Tests') {
            steps {
                // Run pytest and generate XML report
                sh '. venv/bin/activate && pytest --junitxml=reports/test-results.xml'
            }
            post {
                always {
                    // Archive test results
                    junit 'reports/test-results.xml'
                }
            }
        }
    }
}

